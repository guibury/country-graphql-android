<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/paraguayButton"
            app:layout_constraintStart_toStartOf="@+id/paraguayButton"/>
    <TextView
            android:text="Native:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/countryNameText"
            app:layout_constraintStart_toStartOf="@+id/textView8"/>
    <TextView
            android:text="Emoji:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/countryNativeText"
            app:layout_constraintStart_toStartOf="@+id/textView9"/>
    <TextView
            android:text="Continent:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/countryEmojiText"
            app:layout_constraintStart_toStartOf="@+id/textView10"/>
    <TextView
            android:text="Language:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/countryContinentText"
            app:layout_constraintStart_toStartOf="@+id/textView11"/>
    <TextView
            android:text="countries.trevorblades.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continentTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/argentinaButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/ic_argentina"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/brazilButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/selectText"/>

    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/brazilButton"
            android:background="@drawable/ic_brazil"
            app:layout_constraintTop_toTopOf="@+id/argentinaButton"
            app:layout_constraintStart_toEndOf="@+id/argentinaButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/chileButton"/>
    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/chileButton"
            android:background="@drawable/ic_chile"
            app:layout_constraintTop_toTopOf="@+id/brazilButton" app:layout_constraintStart_toEndOf="@+id/brazilButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/paraguayButton"
            android:background="@drawable/ic_paraguay" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/argentinaButton"
            app:layout_constraintStart_toStartOf="@+id/argentinaButton"/>
    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/peruButton"
            android:background="@drawable/ic_peru"
            app:layout_constraintTop_toTopOf="@+id/paraguayButton" app:layout_constraintEnd_toEndOf="@+id/brazilButton"
    />
    <ImageButton
            android:onClick="flagClicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/uruguayButton"
            android:background="@drawable/ic_uruguay"
            app:layout_constraintTop_toTopOf="@+id/peruButton" app:layout_constraintEnd_toEndOf="@+id/chileButton"
    />
    <TextView
            android:text="Select a country:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectText"
            app:layout_constraintTop_toBottomOf="@+id/continentTextView" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/argentinaButton"/>
    <TextView
            android:text="Native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryNativeText"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" android:visibility="invisible"/>
    <TextView
            android:text="Continent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryContinentText"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView11" android:visibility="invisible"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryNameText"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView8" android:visibility="invisible"/>
    <TextView
            android:text="Emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryEmojiText"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView10" android:visibility="invisible"/>
    <TextView
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryLanguageText"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView12" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>