<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/latamFlags"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="Native:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryNameText"
        app:layout_constraintStart_toStartOf="@+id/textView8"/>
    <TextView
        android:text="Emoji:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryNativeText"
        app:layout_constraintStart_toStartOf="@+id/textView9"/>
    <TextView
        android:text="Continent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryEmojiText"
        app:layout_constraintStart_toStartOf="@+id/textView10"/>
    <TextView
        android:text="Language:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryContinentText"
        app:layout_constraintStart_toStartOf="@+id/textView11"/>

    <TextView
        android:text="Native"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryNativeText"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:visibility="invisible"/>
    <TextView
        android:text="Continent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryContinentText"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        android:visibility="invisible"/>
    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryNameText"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:visibility="invisible"/>
    <TextView
        android:text="Emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryEmojiText"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        android:visibility="invisible"/>
    <TextView
        android:text="Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryLanguageText"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>