<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsActivity">

    <TextView
        android:id="@+id/countryNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="Name"
        android:id="@+id/countryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/countryNameTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/countryNameTitle"/>
    <TextView
        android:text="Native:"
        android:id="@+id/countryNativeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryNameText"
        app:layout_constraintStart_toStartOf="@+id/countryNameTitle"/>
    <TextView
        android:text="Native"
        android:id="@+id/countryNativeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/countryNativeTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/countryNativeTitle"/>
    <TextView
        android:text="Emoji:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryEmojiTitle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryNativeText"
        app:layout_constraintStart_toStartOf="@+id/countryNativeTitle"/>
    <TextView
        android:text="Emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryEmojiText"
        app:layout_constraintStart_toEndOf="@+id/countryEmojiTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/countryEmojiTitle"/>
    <TextView
        android:text="Continent:"
        android:id="@+id/countryContinentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/countryEmojiText"
        app:layout_constraintStart_toStartOf="@+id/countryEmojiTitle"/>

    <TextView
        android:id="@+id/countryContinentText"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:text="Continent"
        app:layout_constraintStart_toEndOf="@+id/countryContinentTitle"
        app:layout_constraintTop_toTopOf="@+id/countryContinentTitle" />

    <TextView
        android:id="@+id/countryLanguageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Language:"
        app:layout_constraintStart_toStartOf="@+id/countryContinentTitle"
        app:layout_constraintTop_toBottomOf="@+id/countryContinentTitle" />
    <TextView
        android:text="Language"
        android:id="@+id/countryLanguageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/countryLanguageTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/countryLanguageTitle"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryLanguageTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>