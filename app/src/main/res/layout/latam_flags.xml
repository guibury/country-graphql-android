<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/latamFlags"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.MainActivity">

    <ImageButton
        android:id="@+id/argentinaButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_argentina"
        app:layout_constraintEnd_toStartOf="@+id/brazilButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/brazilButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_brazil"
        app:layout_constraintEnd_toStartOf="@+id/chileButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/argentinaButton"
        app:layout_constraintTop_toTopOf="@+id/argentinaButton" />

    <ImageButton
        android:id="@+id/chileButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_chile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/brazilButton"
        app:layout_constraintTop_toTopOf="@+id/brazilButton" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/paraguayButton"
        android:background="@drawable/ic_paraguay"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/argentinaButton"
        app:layout_constraintStart_toStartOf="@+id/argentinaButton"/>
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/peruButton"
        android:background="@drawable/ic_peru"
        app:layout_constraintTop_toTopOf="@+id/paraguayButton"
        app:layout_constraintEnd_toEndOf="@+id/brazilButton" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/uruguayButton"
        android:background="@drawable/ic_uruguay"
        app:layout_constraintTop_toTopOf="@+id/peruButton"
        app:layout_constraintEnd_toEndOf="@+id/chileButton" />

</androidx.constraintlayout.widget.ConstraintLayout>